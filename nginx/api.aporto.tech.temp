server {
    listen 80;
    listen [::]:80;
    server_name api.aporto.tech;

    # Temporary configuration for SSL certificate generation
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    location / {
        return 200 'Server is being configured...';
        add_header Content-Type text/plain;
    }
}
